      <% else %>
        <li class="list-group-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link #{yield(:blog_active)}"  %> 
        </li>
        <li class="list-group-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link #{yield(:blog_active)}"  %> 
        </li>        
      <% end %>
      </ul>
    </div>
  </div>
</div>

<nav class="navbar navbar-light bg-faded">
  <div class='container'>    
    <button class="navbar-toggler hidden-sm-up pull-xs-right" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar">
      &#9776;
    </button>
    <% if user_signed_in? %>
      <strong><%= current_user.email %></strong>.
    <% end %>
  </div>
</nav>