<div class="collapse" id="exCollapsingNavbar">
  <div class="collapse-bg p-a-1">
    <div class='card'>
      <ul class="list-group list-group-flush">
      <% if user_signed_in? %>        
        <li class="list-group-item">
          <%= link_to 'Inicio', exams_path, class: "nav-link #{yield(:about_active)}" %>
        </li>
        <li class="list-group-item">
          <%= link_to 'Editar Perfil', edit_user_registration_path, class: "nav-link #{yield(:about_active)}" %>
        </li>
        <li class="list-group-item">
          <%= link_to 'Salir', destroy_user_session_path, method: :delete, class: "nav-link #{yield(:contact_active)}" %>
